        <mo class="mo">=</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">C</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">i</mi>
         </mrow>
        </msub>
        <mo class="mo">/</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">a</mi>
         </mrow>
        </msub>
       </mrow>
      </mtd>
      <mtd columnalign="left" class="mtd">
       <mrow class="mrow">
