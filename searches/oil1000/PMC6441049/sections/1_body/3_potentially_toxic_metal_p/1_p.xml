        <mi class="mi">P</mi>
        <mi class="mi">I</mi>
        <mo class="mo">=</mo>
        <mn class="mn">1</mn>
        <mo class="mo">+</mo>
        <mspace width=".25em" class="mspace"/>
        <mo stretchy="false" class="mo">(</mo>
        <mi mathvariant="normal" class="mi">X</mi>
        <mo class="mo">−</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">a</mi>
         </mrow>
        </msub>
        <mo stretchy="false" class="mo">)</mo>
        <mo class="mo">/</mo>
        <mo stretchy="false" class="mo">(</mo>
        <msub class="msub">
