      <mtd columnalign="left" class="mtd">
       <mrow class="mrow">
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">a</mi>
         </mrow>
        </msub>
        <mo class="mo">&lt;</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">C</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">i</mi>
         </mrow>
        </msub>
        <mo class="mo">≤</mo>
        <mspace width=".25em" class="mspace"/>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <msub class="msub">
           <mrow class="mrow">
            <mi mathvariant="normal" class="mi">C</mi>
