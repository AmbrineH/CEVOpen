         </mrow>
        </msub>
        <mo stretchy="false" class="mo">)</mo>
       </mrow>
      </mtd>
      <mtd columnalign="left" class="mtd">
       <mrow class="mrow">
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <msub class="msub">
           <mrow class="mrow">
            <mi mathvariant="normal" class="mi">C</mi>
           </mrow>
           <mrow class="mrow">
            <mi mathvariant="normal" class="mi">i</mi>
           </mrow>
          </msub>
         </mrow>
        </msub>
        <mo class="mo">&lt;</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">C</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">i</mi>
         </mrow>
        </msub>
        <mo class="mo">≤</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">p</mi>
         </mrow>
        </msub>
       </mrow>
      </mtd>
     </mtr>
     <mtr columnalign="left" class="mtr">
      <mtd columnalign="left" class="mtd">
       <mrow class="mrow">
        <mi class="mi">P</mi>
        <mi class="mi">I</mi>
        <mo class="mo">=</mo>
        <mn class="mn">3</mn>
        <mo class="mo">+</mo>
        <mo stretchy="false" class="mo">(</mo>
        <mi class="mi">X</mi>
        <mo class="mo">−</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">p</mi>
