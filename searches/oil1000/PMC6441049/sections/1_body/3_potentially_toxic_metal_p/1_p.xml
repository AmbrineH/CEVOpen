          </msub>
         </mrow>
        </msub>
       </mrow>
      </mtd>
     </mtr>
     <mtr columnalign="left" class="mtr">
      <mtd columnalign="left" class="mtd">
       <mrow class="mrow">
        <mi class="mi">P</mi>
        <mi class="mi">I</mi>
        <mo class="mo">=</mo>
        <mn class="mn">2</mn>
        <mo class="mo">+</mo>
        <mo stretchy="false" class="mo">(</mo>
        <mi class="mi">X</mi>
        <mo class="mo">−</mo>
        <mspace width=".25em" class="mspace"/>
        <msub class="msub">
