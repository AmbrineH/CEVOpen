        </msub>
        <mo stretchy="false" class="mo">)</mo>
        <mo class="mo">/</mo>
        <mo stretchy="false" class="mo">(</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">p</mi>
         </mrow>
        </msub>
        <mo class="mo">−</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi mathvariant="normal" class="mi">X</mi>
         </mrow>
         <mrow class="mrow">
          <msub class="msub">
           <mrow class="mrow">
            <mi mathvariant="normal" class="mi">C</mi>
