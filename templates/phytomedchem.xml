<templateList case="insensitive">
	<variable name="@EMDASH@">—</variable>
    <variable name="@INT@">\-?\d+</variable>
    <variable name="@FLOAT@">\-?\d+\.\d+</variable>
    <variable name="@NUM@">@INT@|@FLOAT@</variable>
	
	<variable name="@ALPHANUM@">A-Za-z0-9</variable>
	<variable name="@GREEK@">αβγδ</variable>
    <variable name="@NUM_PERCENT@">@NUM@\s*%</variable>
    <variable name="@NUM_ERROR@">@NUM@\s*±\s*@NUM@</variable>
    <variable name="@CHEMICAL@">^[@ALPHANUM@@GREEK@\(\)\-\.,\s]+$</variable>
	
    <variable name="@SPECIES@">(?-i) [A-Z](\.|[a-z]+)\s+[a-z]+</variable>
    <variable name="@CEV@">/Users/pm286/projects/CEVOpen</variable>
    <variable name="@DICTIONARY@">@CEV@/dictionary/</variable>
    <variable name="@COMPOUND_DICT@">@DICTIONARY@/compound/compound.xml</variable>
    <variable name="@SPECIES_DICT@">@DICTIONARY@/species/species.xml</variable>
    <!--  filename of table -->
	<file id="root.file">
	  <query id="root.file.q">
	      ^.*\/table_\d+\.html$
	  </query>
	</file>

<!-- composition table (percentage of compounds in oils) -->
	<template name="composition" id="comp">
	    <!--  title of table -->
		<title id="comp.tit">
			  <query id="comp.tit.q" case="insensitive">
				 dummmy OR
				 chemical\s+composition OR
				 composition\s+of OR
	             compound\s+composition OR
	             phytochemical\s+constituents OR
			     (main|major)\s+(components|constituents|compounds)
				 NOT (class|proximate|effects?)
			  </query>
		</title>
			 
		
		<!-- column to retrieve/extract (names of compounds)-->
		<column name="compound" case="insensitive" id="comp.col.comp">
		    <title id="comp.col.comp.tit">
			    <query id="comp.col.comp.tit.q">
				    constituent OR
				    compound OR
				    component
					NOT class
			    </query>
		    </title>
			<cell id="comp.col.comp.cell">
	  		  <!-- <query id="comp.col.comp.cell.q1">@CHEMICAL@</query> -->
    		  <query id="comp.col.comp.cell.q2" mode="lookup">@COMPOUND_DICT@</query>
			  
			</cell>
			<footer>
				<query>total OR yield OR terpene</query>
			</footer>
		</column>
		    
		<!-- column to retrieve/extract (percentages of compounds)-->
		<column name="percentage" count="1,*" id="comp.col.percent">
			<title id="comp.col.percent.tit">
	  		    <query id="comp.col.percent.tit.q">
				    percentage  
				    OR peak area 
				    OR ^.*%.*$
				    NOT activity
			    </query>
			</title>
			<cell id="comp.col.percent.cell">
			  <query id="comp.col.percent.cell.q">
  		        @NUM@ OR
  		        @NUM_ERROR@ OR
  		        @NUM_PERCENT@ OR
				^\s*$ OR
				^\-$ OR
				@EMDASH@ OR
				^t$
			  </query>
			</cell>
			<footer id="comp.col.percent.foot">
			    <query id="comp.col.percent.foot.q">
			        total OR
					Mean OR
					average
			    </query>
			</footer>
		</column>
	</template>
	
	<template name="activity">
	    <!--  title of table -->
		<title id="activ.tit">
		    <query id="activ.tit.q">
			    activit.* OR
			    bacteri.* OR 
			    mortalit.* OR 
			    [Aa]ntibact.* OR 
			    [Aa]ntifung.* OR 
			    [Aa]nti?infect.* OR 
			    [Aa]nti?oxid.* OR 
			    [Aa]nti?helm.* OR 
			    effects?
				NOT class
		    </query>
		</title>
		<column name="target" >
		  <title >
			    <query id="activ.col.target.tit.q">
				    target OR
				    pathogen OR
				    bacteria
					NOT class
			    </query>
		  </title>
		  <cell>
		    @SPECIES@
		  </cell>
		</column>
		<column name="value" >
		  <title >
			    <query id="activ.col.value.tit.q">
				    target OR
				    pathogen OR
				    Oflox.*
					NOT class
			    </query>
		  </title>
		  <cell>
			  @NUM@
		  </cell>
		</column>
	</template>
	
